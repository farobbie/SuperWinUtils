<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="SuperWinUtils.Views.Widgets.SettingEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SuperWinUtils.Views.Widgets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBox Header="{x:Bind Header}" Text="{x:Bind Value, Mode=TwoWay}" Width="200" CornerRadius="2,0,0,2"/>
            <Button Content="S" CornerRadius="0,0,0,0" Margin="3,26,0,0"
                Command="{x:Bind SaveCommand}" CommandParameter="{x:Bind CommandParameter}"/>
            <Button Content="R" CornerRadius="0,2,2,0" Margin="3,26,0,0"
                Command="{x:Bind ResetCommand}" CommandParameter="{x:Bind CommandParameter}"/>
        </StackPanel>
    </Grid>
</UserControl>
