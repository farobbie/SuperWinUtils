<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="SuperWinUtils.Views.Widgets.SettingEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SuperWinUtils.Views.Widgets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <StackPanel Orientation="Horizontal" Margin="5">
        <TextBox Header="{x:Bind Header}" Text="{x:Bind Value, Mode=TwoWay}" Width="200" CornerRadius="2,0,0,2"/>
        <Button CornerRadius="0,0,0,0" Margin="3,26,0,0" Width="32" Height="32"
                ToolTipService.ToolTip="Save"
                Command="{x:Bind SaveCommand}" CommandParameter="{x:Bind CommandParameter}">
            <Image Source="{x:Bind SaveImage}" AutomationProperties.Name="Save" Stretch="Uniform"/>
        </Button>
        <Button CornerRadius="0,2,2,0" Margin="3,26,0,0" Width="32" Height="32"
                ToolTipService.ToolTip="Reset to default"
                Command="{x:Bind ResetCommand}" CommandParameter="{x:Bind CommandParameter}">
            <Image Source="{x:Bind ResetImage}" AutomationProperties.Name="Save" Stretch="Uniform"/>
        </Button>
    </StackPanel>
    
</UserControl>
